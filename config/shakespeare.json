{
    "template": "*",
    "settings" : {
        "number_of_shards" : 1,
        "number_of_replicas" : 0,
        "index" : {
            "query" : { "default_field" : "text_entry" },
            "store" : { "compress" : { "stored" : true, "tv": true } }
        }
    },

    "mappings":{
        "_default_":{
            "_all": { "enabled": true },
            "_source": { "compress": true },
            "dynamic_templates": [
                {
                    "string_template" : {
                        "match" : "*",
                        "mapping": { "type": "string", "index": "not_analyzed" },
                        "match_mapping_type" : "string"
                    }
                }
            ],

            "properties": {
                "@timestamp":{
                    "type":"date",
                    "format":"dateOptionalTime",
                    "index": "not_analyzed",
                    "doc_values": true
                },
                "text_entry": {
                    "type": "string",
                    "index": "analyzed"
                },
                "speaker": {
                    "type": "string",
                    "index": "not_analyzed",
                    "doc_values": true
                },
                "play_name": {
                    "type": "string",
                    "index": "not_analyzed",
                    "doc_values": true
                },
                "host":{
                    "type":"string",
                    "index": "not_analyzed",
                    "doc_values": true
                    
                },
                "service":{
                    "type":"string",
                    "index": "not_analyzed",
                    "doc_values": true
                }
            }
        }
    }
}


